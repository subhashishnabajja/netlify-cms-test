	<h1 class="text-5xl text-red-500 bg-yellow-500">Hello world</h1>
	<p class="text-5xl text-red-500 font-body">Hello world</p>
	<script>
	if (window.netlifyIdentity) {
		window.netlifyIdentity.on("init", user => {
		if (!user) {
			window.netlifyIdentity.on("login", () => {
			document.location.href = "/admin/";
			});
		}
		});
	}
</script>
</body>

